{
  "name": "mediacrawling",
  "version": "1.0.0",
  "description": "A social media crawling application built with TypeScript, Electron, PostgreSQL, and Prisma.",
  "main": "dist/main.js",
  "scripts": {
    "start": "pnpm run build && electron dist/main/main.js",
    "build": "tsc",
    "dev": "concurrently \"tsc -w\" \"wait-on dist/main.js && electron .\"",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "build:electron": "electron-builder"
  },
  "keywords": [
    "typescript",
    "electron",
    "postgresql",
    "prisma",
    "social-media-crawling"
  ],
  "author": "Dika Haris Abdurahman",
  "license": "MIT",
  "dependencies": {
    "electron": "^24.2.0",
    "prisma": "^4.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@prisma/client": "^4.13.0",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.5",
    "@types/react-dom": "^18.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "electron-builder": "^22.14.8",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "wait-on": "^7.0.1"
  }
}
